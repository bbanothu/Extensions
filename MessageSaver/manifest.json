{
  "manifest_version": 3,
  "name": "Message Saver",
  "version": "1.0",
  "description": "Saves and pastes messages on command",
  "action": {
    "default_icon": "assets/copy.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "sidePanel", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/copy.png",
    "48": "assets/copy.png",
    "128": "assets/copy.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}