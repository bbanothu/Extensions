{
  "manifest_version": 3,
  "name": "Message Saver",
  "version": "1.0",
  "description": "Saves and pastes messages on command",
  "action": {
    "default_icon": "assets/copy.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  }
}
