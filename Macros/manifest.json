{
  "manifest_version": 2,
  "name": "Message Saver",
  "version": "1.0",
  "description": "Saves and pastes messages on command",
  "browser_action": {
    "default_icon": "copy.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
